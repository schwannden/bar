<!-- BANNER : begin -->
<div id="banner">

  <!-- BANNER BG : begin -->
  <div class="banner-bg">
    <div class="banner-bg-item"><%= image_tag "bg_banner2.jpg"%></div>
    <div class="banner-bg-item"><%= image_tag "bg_banner2.jpg"%></div>
    <div class="banner-bg-item"><%= image_tag "bg_banner2.jpg"%></div>
  </div>
  <!-- BANNER BG : end -->

  <!-- BANNER SEARCH : begin -->
  <div class="banner-search">
    <div class="container">
      <div class="banner-search-inner">
        <ul class="custom-list tab-title-list clearfix">
          <li class="tab-title active"><a href="#rent">找東西？</a></li>
        </ul>
        <ul class="custom-list tab-content-list">

          <!-- SWAP : begin -->
          <li class="tab-content active">
            <form class="default-form" action="index.html">

              <!-- SEARCH INPUT : begin -->
              <span class="search-input">
                <input type="text" placeholder="物品名稱">
              </span>
              <!-- SEARCH INPUT : end -->

              <!-- ARRIVAL DATE : begin -->
              <span class="calendar-input input-left" title="開始借用日期">
                <input type="text" name="arrival" placeholder="開始借用日期" data-dateformat="m/d/y">
                <i class="fa fa-calendar"></i>
              </span>
              <!-- ARRIVAL DATE : end -->

              <!-- DEPARTURE DATE : begin -->
              <span class="calendar-input input-right" title="結束借用日期">
                <input type="text" name="departure" placeholder="結束借用日期" data-dateformat="m/d/y">
                <i class="fa fa-calendar"></i>
              </span>
              <!-- DEPARTURE DATE : end -->

              <!-- Quantity : begin -->
              <span class="select-box" title="數量">
                <select name="quantity" data-placeholder="數量">
                  <option> 數量 </option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </span>
              <!-- CHILDREN : end -->

              <!-- SUBMIT : begin -->
              <span class="submit-btn">
                <a href="./buckets"><div class="button"><i class="fa fa-search"></i>Search</div></a>
              </span>
              <!-- SUBMIT : end -->

            </form>
          </li>
          <!-- SWAP : end -->

          <!-- BOOK : begin -->
          <li class="tab-content">
            <form class="default-form" action="index.html">

              <!-- SEARCH INPUT : begin -->
              <span class="search-input">
                <input type="text" placeholder="Where do you want to book?">
              </span>
              <!-- SEARCH INPUT : end -->

              <!-- ARRIVAL DATE : begin -->
              <span class="calendar-input input-left" title="Arrival">
