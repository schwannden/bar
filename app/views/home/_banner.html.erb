                </select>
              </span>
              <!-- CHILDREN : end -->

              <!-- SUBMIT : begin -->
              <span class="submit-btn">
                <button class="button"><i class="fa fa-search"></i> Search</button>
              </span>
              <!-- SUBMIT : end -->

            </form>
          </li>
          <!-- RENT : end -->

        </ul>
      </div>
    </div>
  </div>
  <!-- BANNER SEARCH : end -->

</div>
<!-- BANNER : end -->
