<!DOCTYPE html>
<html>
	<head>
        <!-- STYLESHEETS : begin -->
        <!-- CSS include order will effect the result !!, DO NOT CHANGE ORDER-->
        <link rel="stylesheet" type="text/css" href="/library/css/font-awesome.min.css">
        <%= stylesheet_link_tag params[:controller] %>
        <%= stylesheet_link_tag "style" %>
        <%= stylesheet_link_tag "skins/default" %>
		<!--link rel="stylesheet" type="text/css" href="library/css/custom.css"> uncomment if you want to use custom CSS definitions -->
		<!-- STYLESHEETS : end -->
		
        <!--[if lte IE 8]>
			<link rel="stylesheet" type="text/css" href="library/css/oldie.css">
			<script src="library/js/respond.min.js" type="text/javascript"></script>
        <![endif]-->
	</head>
	<body class="enable-fixed-header enable-style-switcher enable-inview-animations">
	<%= render "layouts/header" %>

	<!-- CORE : begin -->
	<div id="core" class="page-property-details">

	<!-- PAGE HEADER : begin -->
	<div class="page-header" style="background-image:url(/images/show_cover.jpeg);">
		<div class="container">
			<div class="page-header-inner clearfix">
				<h1><%= @bucket.title %></h1>
				<ul class="custom-list breadcrumbs">
					<li><a href="/">Home</a> / </li>
					<li><a href="/buckets/">Search Results</a> /</li>
					<li><a href="#">Property Details</a></li>
				</ul>
			</div>
		</div>
	</div>
	<!-- PAGE HEADER : end -->

	<!-- MAIN WRAPPER : begin -->
	<div class="main-wrapper-container">
		<div class="container">
			<div id="main-wrapper" style="background:#FFF;">
				<div class="row">
					<div class="col-md-8 col-md-push-2">

						<!-- PROPERTY DETAILS : begin -->
						<div class="property-details">

							<!-- PROPERTY IMAGES : begin -->
							<div class="property-images">
								<div class="image-list">
									<div class="image"><img src="<%= @bucket.galleries.first.image.list.url %>" alt="商品圖一" width="720" height="450"></div>
									<div class="image"><img src="/dummies/property_02.jpg" alt="商品圖二"></div>
									<div class="image"><img src="/dummies/property_03.jpg" alt="商品圖三"></div>
								</div>
								<div class="images-footer">
									<div class="images-footer-inner">
										<div class="image-description"></div>
										<div class="image-counter"></div>
									</div>
									<button class="prev-btn"><i class="fa fa-chevron-left"></i></button>
									<button class="next-btn"><i class="fa fa-chevron-right"></i></button>
								</div>
							</div>
							<!-- PROPERTY IMAGES : end -->


							<div class="row">
								<div class="col-md-8">

									<!-- PROPERTY PANEL : begin -->
									<div class="property-panel">

										<!-- OBJECT PRICE : begin -->
										<div class="panel-item object-price">
											<h3><%= @bucket.title %></h3>
											<p class="price"> <strong>$<%= @bucket.price %></strong>/ 天</p>
										</div>
										<!-- OBJECT PRICE : end -->

										<!-- OBJECT OWNER : begin -->
										<div class="panel-item object-owner">
											<h4 class="panel-item-title">擁有者</h4>
											<div class="clearfix">
												<div class="portrait">
													<img src="/images/logo.png" alt="" height="150" width="150">
													<h5 class="name">
													<i class="ico-person"></i> <%= User.find_by(@bucket.user_id).organization %>
													</h5>
												</div>
											</div>
										</div>
										<!-- OBJECT OWNER : end -->

									</div>
									<!-- PROPERTY PANEL : end -->

								</div>

								<div class="col-md-4">
								<!-- BOOK FORM : begin -->
								<div class="panel-item contact-form">

									<h3 class="property-book-title">- 訂單 -</h4>
									<form class="default-form" action="/feedback" method="get">
										<p class="alert-message warning validation" style="display: none;"><i class="ico fa fa-exclamation-circle"></i> Please fill all fields!</p>
								
									<!-- ARRIVAL DATE, DEPARTURE DATE : begin -->
									<p class="form-row clearfix">
										<span class="calendar-input input-left" title="Arrival">
											<input type="text" name="arrival" placeholder="開始日期" data-dateformat="m/d/y">
											<i class="fa fa-calendar"></i>
										</span>
									</p>
									<p class="form-row clearfix">
										<span class="calendar-input input-right" title="Departure">
											<input type="text" name="departure" placeholder="結束日期" data-dateformat="m/d/y">
											<i class="fa fa-calendar"></i>
										</span>									
									</p>
									<!-- ARRIVAL DATE, DEPARTURE DATE : end -->

									<!-- NUMBER OF ADULTS AN CHILDREN : begin -->
									<p class="form-row clearfix">
										<span class="input-left" title="Quantity">
											<input type="text" placeholder="數量">
										</span>
									</p>
									<p class="form-row">
										<button class="button submit-btn"><i class="fa fa-hand-o-up"></i> 拎北想要</button>
									</p>
									</form>
								</div>
								<!-- BOOK FORM : end -->

								</div>

								<div class="col-md-12">
									
									<!-- PROPERTY DESCRIPTION : begin -->
									<div class="property-description">
										<!-- DESCRIPTION TEXT : begin -->
										<div class="description-text">
											<h4>商品敘述</h4>
											<p><%= @bucket.description %></p>
										</div>
										<!-- DESCRIPTION TEXT : end -->

									</div>
									<!-- PROPERTY DESCRIPTION : end -->

								</div>
							</div> <!-- row -->

						</div>
						<!-- PROPERTY DETAILS : end -->

					</div>

				</div>
			</div>
		</div>
	</div>
	<!-- MAIN WRAPPER : end -->
</div>
<!-- CORE : end -->


<%= render "layouts/footer" %>

<!-- SCRIPTS : begin -->
<%= javascript_include_tag :public %>
<%= javascript_include_tag :scripts %>
<!-- SCRIPTS : end -->

</body>
</html>
