<!-- PROPERTY : begin -->
<li class="property first-in-row odd" id="bucket<%= bucket.id %>">
  <a href="#" class="property-thumb">
    <img src="<%= bucket.galleries.first.image.list.url %>" alt="">
    <span class="overlay"><span><i class="fa fa-search"></i> View More</span></span>
  </a>
  <div class="property-content">
    <h4 class="property-title"><a href="#"><%= bucket.title %></a></h4>
    <h5 class="property-location"><%= current_user.organization %></h5>
    <p class="property-description"><%= bucket.description %></p>
    <ul class="custom-list property-icons">
      <li class="beds" title="beds"><i></i>2</li>
      <li class="people" title="people"><i></i>4</li>
      <li class="bathrooms" title="bathrooms"><i></i>1</li>
    </ul>
    <div class="property-price-rating">
      <div class="property-price"><strong>$ <%= bucket.price%> </strong> / 天</div>
      <div class="property-rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
      <a class="button" href="<%= edit_admin_bucket_path bucket %>"> 
        <i class="fa fa-edit"></i> 編輯 </a>
      <%= link_to admin_bucket_path(bucket), class: "button color-2", method: :delete, remote: true do %>
        <i class="fa fa-minus"></i> 刪除 </a>
      <% end %>
  </div>
</li>
<!-- PROPERTY : end -->

