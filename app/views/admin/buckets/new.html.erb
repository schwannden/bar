<!-- CORE : begin -->
<div id="core">
  <!-- CONTENT SECTION - SERVICES : begin -->
  <section class="content-section row">
    <div class="container">
      <div class="col-md-3">
        <h2>新增物品</h2>
      </div>
      <div class="col-md-9">
        <%= form_for @admin_bucket, as: :admin_bucket, url: admin_buckets_path,
          html: {class: "form-horizontal"} do |f| %>
          <div class="form-group">
            <%= f.label :title, "標題", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :quantity, "數量", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.number_field :quantity, class: "form-control", 
                                 min: 1, value: 1%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :price, "價格", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.text_field :price, class: "form-control", value: "10" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, "描述", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.text_area :description, class: "form-control" %>
            </div>
          </div>
          <br>
          <%= f.submit "新增物品", class: "button", style: "width: 100%" %>
        <% end %>
      </div>
    </div>
  </section>
</div>
<!-- CORE : end -->
