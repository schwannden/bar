<!DOCTYPE html>
<html>
  <head>

    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | Casa - Swap, Book &amp; Rent HTML5 Template</title>
    <link rel="shortcut icon" href="dummies/favicon.ico">

    <!-- GOOGLE FONTS : begin -->
    <link href="http://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" type="text/css">
    <!-- GOOGLE FONTS : end -->

    <!-- STYLESHEETS : begin -->
    <link rel="stylesheet" type="text/css" href="/library/css/font-awesome.min.css">
    <%= stylesheet_link_tag params[:controller] %>
    <%= stylesheet_link_tag "skins/default"%>
    <%= stylesheet_link_tag "animate.custom"%>
    <%= stylesheet_link_tag "style"%>
    <!--link rel="stylesheet" type="text/css" href="library/css/custom.css"> uncomment if you want to use custom CSS definitions -->
    <!-- STYLESHEETS : end -->

    <!--[if lte IE 8]>
      <link rel="stylesheet" type="text/css" href="library/css/oldie.css">
      <script src="library/js/respond.min.js" type="text/javascript"></script>
    <![endif]-->
  </head>
  <body class="enable-fixed-header enable-inview-animations">
    <%= render "layouts/header"%>

    <!-- CORE : begin -->
    <div id="core">
      <!-- CONTENT SECTION - SERVICES : begin -->
      <section class="content-section row">
        <div class="container">
          <div class="col-md-3">
            <h2>新增物品</h2>
          </div>
          <div class="col-md-9">
            <%= form_for @admin_bucket, as: :admin_bucket, url: admin_buckets_path,
              html: {class: "form-horizontal"} do |f| %>
              <div class="form-group">
                <%= f.label :title, "標題", class: "control-label"%>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :quantity, "數量", class: "control-label"%>
                <%= f.number_field :quantity, class: "form-control", min: 1, value: 1%>
              </div>
              <div class="form-group">
                <%= f.label :price, "價格", class: "control-label"%>
                <%= f.text_field :price, class: "form-control", value: "10" %>
              </div>
              <div class="form-group">
                <%= f.label :description, "描述", class: "control-label"%>
                <%= f.text_area :description, class: "form-control" %>
              </div>
              <br>
              <%= f.submit "新增物品", class: "button", style: "width: 100%" %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
    <!-- CORE : end -->

    <%= render "layouts/footer"%>

    <!-- SCRIPTS : begin -->
    <%= javascript_include_tag :public %>
    <%= javascript_include_tag :scripts %>
    <%= javascript_include_tag params[:controller] %>
    <!-- SCRIPTS : end -->
  </body>
</html>
