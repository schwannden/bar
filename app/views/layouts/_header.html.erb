          <% if user_signed_in? %>
          <div class="header-login">
            <button class="register-toggle header-btn" >            
              <i class="fa fa-user"></i> 
              <%= current_user.email.split("@")[0] + "(" + current_user.organization + ")"%>
              <i class="fa fa-angle-down"></i>
            </button>
            <div class="header-form" style="width:250px;">
                <ul class="custom-list">
                  <li><%= link_to "我的商品", admin_path %></li>
                  <li><%= link_to "修改個人資料", edit_user_registration_path %></li>
                </ul>
            </div>

          </div>
          <div class="header-register">
            <a class="header-btn"
               href="<%= destroy_user_session_path %>"
               data-method="delete">
              <i class="fa fa-sign-out"></i> 登出 
            </a>
          </div>
          <!-- HEADER REGISTER : end -->
          <% else %>
          <!-- HEADER REGISTER : begin -->
          <div class="header-register">
            <button class="register-toggle header-btn"><i class="fa fa-plus-circle"></i> 註冊 </button>
            <div class="header-form">
              <%= form_for @user, url: registration_path(@user),
                  html: { class: "default-form"} do |f| %>
                <p class="alert-message warning"><i class="ico fa fa-exclamation-circle"></i> 所有的欄位都要填喔！<i class="fa fa-times close"></i></p>
                <p class="form-row">
                  <%= f.text_field :email, placeholder: "email",
                      class: "required email"  %>
                </p>
                <p class="form-row">
                  <%= f.password_field :password, 
                    placeholder: "密碼", class: "required" %>
                </p>
                <p class="form-row">
                  <%= f.password_field :password_confirmation, 
                    placeholder: "重複輸入您的密碼", class: "required" %>
                </p>
                <p class="form-row">
                  <%= f.submit "註冊", class: "submit-btn button" %>
                </p>
              <% end %>
            </div>
          </div>
          <!-- HEADER REGISTER : end -->

          <!-- HEADER LOGIN : begin -->
          <div class="header-login">
            <button class="login-toggle header-btn"><i class="fa fa-power-off"></i> Login</button>
            <div class="header-form">
              <%= form_for @user, url: user_session_path,
                  html: { class: "default-form"} do |f| %>
                <p class="alert-message warning"><i class="ico fa fa-exclamation-circle"></i> 所有的欄位都要填喔！ <i class="fa fa-times close"></i></p>
                <p class="form-row">
                  <%= f.text_field :email, placeholder: "email",
                      class: "required email" %>
                </p>
                <p class="form-row">
                  <%= f.password_field :password, 
                    placeholder: "密碼", class: "required" %>
                </p>
                <p class="form-row">
                  <button class="submit-btn button"><i class="fa fa-power-off"></i> Login</button>
                </p>
                <p class="form-row forgot-password">
                  <a href="#"> 忘記密碼 </a>
                </p>
              <% end %>
            </div>
          </div>
          <!-- HEADER LOGIN : end -->
          <% end %>

          <% if user_signed_in? %>
            <!-- HEADER ADD OFFER : begin -->
            <span class="header-add-offer">
            <%= link_to "新增商品", new_admin_bucket_path ,{ :class=>"fa fa-plus button" }%> 
            <!-- HEADER ADD OFFER : end -->
          <% else %>
            <span class="header-add-offer">
            <div class="fa button"> 免費封測中！ </div> 
